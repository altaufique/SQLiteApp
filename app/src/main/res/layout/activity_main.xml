<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fhb.sqliteapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit PowerGold Package"
        android:id="@+id/textView_PkgTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Package Name :"
        android:id="@+id/textView_PkgName"
        android:layout_below="@+id/textView_PkgTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="false"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gold Package :"
        android:id="@+id/textView_PkgGold"
        android:layout_below="@+id/textView_PkgName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/textView_GoldQty"
        android:layout_alignEnd="@+id/textView_GoldQty"
        android:layout_alignParentRight="false"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gold Quantity :"
        android:id="@+id/textView_GoldQty"
        android:layout_below="@+id/textView_PkgGold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/textView_PkgCost"
        android:layout_alignEnd="@+id/textView_PkgCost"
        android:layout_alignParentRight="false"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price (RM) :"
        android:id="@+id/textView_PkgCost"
        android:layout_below="@+id/textView_GoldQty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@+id/textView_PkgName"
        android:layout_alignEnd="@+id/textView_PkgName"
        android:layout_alignParentRight="false"
        android:gravity="right" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PkgName"
        android:layout_below="@+id/textView_PkgTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView_PkgName"
        android:layout_toEndOf="@+id/textView_PkgName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PkgGold"
        android:layout_below="@+id/editText_PkgName"
        android:layout_alignLeft="@+id/editText_PkgName"
        android:layout_alignStart="@+id/editText_PkgName"
        android:layout_alignRight="@+id/editText_PkgName"
        android:layout_alignEnd="@+id/editText_PkgName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_GoldQty"
        android:layout_below="@+id/editText_PkgGold"
        android:layout_alignLeft="@+id/editText_PkgGold"
        android:layout_alignStart="@+id/editText_PkgGold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_PkgFee"
        android:layout_below="@+id/editText_GoldQty"
        android:layout_alignLeft="@+id/editText_GoldQty"
        android:layout_alignStart="@+id/editText_GoldQty"
        android:layout_alignRight="@+id/editText_GoldQty"
        android:layout_alignEnd="@+id/editText_GoldQty"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Package"
        android:id="@+id/button_PkgUpdate"
        android:layout_below="@+id/editText_PkgFee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
